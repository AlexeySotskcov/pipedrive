<div class="container px-4">
<form action="/newJob/{{deal.id}}" method="post">
    <div class="row justify-content-around">
        {{!-- SECTION: Client details --}}
        <div class="col-5 border border-top-0 rounded-5 rounded-top-0 shadow p-3 mb-5 bg-body-tertiary rounded">
            <div class="row p-3">
                <div class="col-12 p-1"><h2>Client details</h2></div>
                <div class="col-6 p-1">
                    <input type="text" class="form-control" id="fName" name="fName" placeholder="First name" value={{deal.person_id.firstName}}>
                </div>
                <div class="col-6 p-1"><input type="text" class="form-control" id="lName" name="lName" placeholder="Last name" value={{deal.person_id.lastName}}></div>
                <div class="col-12 p-1"><input type="phone" class="form-control" id="phone" name="phone" placeholder="Phone number" value={{deal.person_id.primaryPhone}}></div>
                <div class="col-12 p-1"><input type="email" class="form-control" id="email" name="email" placeholder="Email (Optional)" value={{deal.person_id.primaryEmail}}></div>
            </div>
        </div>

        {{!-- SECTION: Job type --}}
        <div class="col-5 border border-top-0 rounded-5 rounded-top-0 shadow p-3 mb-5 bg-body-tertiary rounded">
            <div class="row p-3">
                <div class="col-12 p-1"><h2>Job type</h2></div>
                <div class="col-12 p-1">
                <select class="form-select" name="jobType">
                    <option value={{deal.jobTypeValue}} disabled selected hidden>{{deal.jobTypeLabel}}</option>
                    {{#each deal.jobTypeOptions}}
                    <option value={{id}}>{{label}}</option>
                    {{/each}}
                </select>
                </div>
                <div class="col-12 p-1">
                    <select class="form-select" name="jobSource">
                        <option value={{deal.jobSourceValue}} disabled selected hidden>{{deal.jobSourceLabel}}</option>
                        {{#each deal.jobSourceOptions}}
                        <option value={{id}}>{{label}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-12 p-1">
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Job description (optional)" name="jobDescription" >{{deal.jobDescription}}</textarea>
                </div>
            </div>
        </div>

        {{!-- SECTION: Service location --}}
        <div class="col-5 border border-top-0 rounded-5 rounded-top-0 shadow p-3 mb-5 bg-body-tertiary rounded">
            <div class="row p-3">
                <div class="row">
                    <div class="col-12 p-1">
                        <h2>Service location</h2>
                    </div>
                    <div class="col-12 p-1">
                        <input type="text" class="form-control" id="address" name="address" placeholder="1234 Main St" value={{deal.address}}>
                    </div>
                    <div class="col-12 p-1">
                        <input type="text" class="form-control" id="city" name="city" placeholder="City" value={{deal.city}}>
                    </div>
                    <div class="col-12 p-1">
                        <input type="text" class="form-control" id="state" placeholder="State" value={{deal.state}}>
                    </div>
                    <div class="col-6 p-1">
                        <input type="text" class="form-control" id="zip" name="zip" value={{deal.zip}}>
                    </div>
                    <div class="col-6 p-1">
                        <select class="form-select" name="area">
                            <option value="" disabled selected hidden>Area</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        {{!-- SECTION: Scheduled --}}
        <div class="col-5 border border-top-0 rounded-5 rounded-top-0 shadow p-3 mb-5 bg-body-tertiary rounded">
            <div class="row p-3">
                <div class="row">
                    <div class="col-12 p-1">
                        <h2>Scheduled</h2>
                    </div>
                    <div class="col-12 p-1"><input type="date" class="form-control" id="startDate" name="startDate" placeholder="Start date" value={{deal.startDate}}></div>
                    <div class="col-6 p-1">
                        <div class="input-group date" id="startTimePicker">
                            <input type="text" class="form-control timePicker" id="startTime" name="startTime" value={{deal.startTime}} />
                                <span class="input-group-text bg-light d-block">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-alarm"
                                        viewBox="0 0 16 16">
                                        <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9z" />
                                        <path
                                            d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1zm1.038 3.018a6 6 0 0 1 .924 0 6 6 0 1 1-.924 0M0 3.5c0 .753.333 1.429.86 1.887A8.04 8.04 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5M13.5 1c-.753 0-1.429.333-1.887.86a8.04 8.04 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1" />
                                    </svg>
                                </span>
                        </div>
                    </div>
                    <div class="col-6 p-1">
                        <div class="input-group date" id="endTimePicker">
                            <input type="text" class="form-control timePicker" id="endTime" name="endTime" value={{deal.endTime}} />
                                <span class="input-group-text bg-light d-block">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-alarm"
                                        viewBox="0 0 16 16">
                                        <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9z" />
                                        <path
                                            d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1zm1.038 3.018a6 6 0 0 1 .924 0 6 6 0 1 1-.924 0M0 3.5c0 .753.333 1.429.86 1.887A8.04 8.04 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5M13.5 1c-.753 0-1.429.333-1.887.86a8.04 8.04 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1" />
                                    </svg>
                                </span>
                        </div>
                    </div>
                    <div class="col-12 p-1">
                        <select class="form-select" name="tester">
                            <option value={{deal.technicianId}} disabled selected hidden>{{deal.technicianName}}</option>
                            {{#each deal.technicianOptions}}
                            <option value={{id}}>{{name}}</option>
                            {{/each}}

                        </select>
                    </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col border-end  d-flex justify-content-center align-items-center">
            <div class="ms-1 me-1"><button type="submit" class="btn btn-primary">Submit</button></div>
            <div class="ms-1 me-1"><button type="button" class="btn btn-danger">Cancel</button></div>
        </div>
    </div>
    </form>
</div>

<script type="text/javascript">
    let adr = $('#address').val().replaceAll("_", " ");
    $('#address').val(adr);

    var startFirstOpen = true;
    var startTime;

    var endFirstOpen = true;
    var endTime;

    $('#startTimePicker').datetimepicker({
        useCurrent: false,
        format: "hh:mm A"
    }).on('dp.show', function () {
        if (startFirstOpen) {
            startTime = moment().startOf('day');
            startFirstOpen = false;
        } else {
            startTime = "01:00 PM"
        }
        $(this).data('DateTimePicker').date(startTime);
    });

    $('#endTimePicker').datetimepicker({
            useCurrent: false,
            format: "hh:mm A"
        }).on('dp.show', function () {
            if (endFirstOpen) {
                endTime = moment().startOf('day');
                endFirstOpen = false;
            } else {
                endTime = "01:00 PM"
            }
            $(this).data('DateTimePicker').date(endTime);
        });
</script>